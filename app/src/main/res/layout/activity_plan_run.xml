<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context=".PlanRunActivity">

    <Button
        android:id="@+id/aiButton"
        style="@style/button_style"
        android:layout_width="350dp"
        android:layout_height="95dp"

        android:text="AI Opponent : Off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stateTextBox"
        app:layout_constraintVertical_bias="0.236"
        app:layout_constraintWidth_percent="0.6" />

    <Button
        android:id="@+id/pauseButton"
        style="@style/button_style"
        android:layout_width="273dp"
        android:layout_height="79dp"

        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minsInputBox"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintWidth_percent="0.6" />

    <EditText
        android:id="@+id/stateTextBox"
        style="@style/text_label_style"
        android:layout_width="352dp"
        android:layout_height="73dp"
        android:ems="10"

        android:text="Select Route:"
        android:textAlignment="viewStart"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLeftNavBox"
        app:layout_constraintVertical_bias="0.1"

        />

    <EditText
        android:id="@+id/RouteNameBox"
        style="@style/text_label_style"
        android:layout_width="352dp"
        android:layout_height="73dp"
        android:ems="10"

        android:text="Run Name:"
        android:textAlignment="viewStart"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLeftNavBox"
        app:layout_constraintVertical_bias="0.246"

        />

    <Spinner
        android:id="@+id/routeNamesSpinner"
        android:layout_width="186dp"
        android:layout_height="61dp"
        android:background="@android:color/white"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="@+id/stateTextBox"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        app:layout_constraintVertical_bias="0.108" />

    <EditText
        android:id="@+id/aiTimeBox"
        style="@style/text_label_style"
        android:layout_width="144dp"
        android:layout_height="145dp"
        android:ems="10"
        android:text="Time for opponent to finish:"
        android:textAlignment="center"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aiButton"
        app:layout_constraintVertical_bias="0.02" />

    <EditText
        android:id="@+id/minsBox"
        android:layout_width="80dp"
        android:layout_height="61dp"
        android:background="@drawable/textbox"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Mins"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="21dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/aiTimeBox"
        app:layout_constraintTop_toBottomOf="@+id/aiButton"
        app:layout_constraintVertical_bias="0.015" />

    <EditText
        android:id="@+id/secondsBox"
        android:layout_width="100dp"
        android:layout_height="61dp"
        android:background="@drawable/textbox"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Seconds"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="21dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintStart_toEndOf="@+id/aiTimeBox"
        app:layout_constraintTop_toBottomOf="@+id/aiButton"
        app:layout_constraintVertical_bias="0.015" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/textbox"
        style="@style/text_label_style"
        android:text="Plan Run"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.175"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/topLeftNavBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.75" />


    <TextView
        android:id="@+id/topLeftNavBox"
        android:background="@drawable/textbox"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeStepGranularity="5sp"
        app:layout_constraintHeight_percent="0.175"
        app:layout_constraintWidth_percent="0.25"
        />



    <ImageButton
        android:id="@+id/navBackButton"
        android:background="@drawable/nav_button_state_manager"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/topLeftNavBox"
        app:layout_constraintEnd_toEndOf="@+id/topLeftNavBox"
        app:layout_constraintStart_toStartOf="@+id/topLeftNavBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeStepGranularity="5sp"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="0.17"
        />



    <EditText
        android:id="@+id/minsInputBox"
        android:layout_width="73dp"
        android:layout_height="84dp"
        android:background="@drawable/textbox"
        android:clickable="true"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:text="0"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/aiTimeBox"
        app:layout_constraintTop_toBottomOf="@+id/minsBox"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/secondsInputBox"
        android:layout_width="98dp"
        android:layout_height="84dp"
        android:background="@drawable/textbox"
        android:clickable="false"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:text="0"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/minsInputBox"
        app:layout_constraintTop_toBottomOf="@+id/secondsBox"
        app:layout_constraintVertical_bias="0" />

    <EditText
        android:id="@+id/runNameInputBox"
        android:layout_width="222dp"
        android:layout_height="73dp"
        android:background="@drawable/textbox"
        android:clickable="false"
        android:ems="10"
        android:hint="__________________"
        android:inputType="textPersonName|text"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/RouteNameBox"
        app:layout_constraintEnd_toEndOf="@+id/RouteNameBox"
        app:layout_constraintHorizontal_bias="0.987"
        app:layout_constraintStart_toStartOf="@+id/RouteNameBox"
        app:layout_constraintTop_toTopOf="@+id/RouteNameBox"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>